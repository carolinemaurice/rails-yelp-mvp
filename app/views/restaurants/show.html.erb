<h1><%= @restaurant.name %></h1>

<p>
  <strong>Category: </strong> <%= @restaurant.category %>
</p>
<p>
  <strong>Address: </strong> <%= @restaurant.address %>
</p>
<p>
  <strong>Phone number: </strong> <%= @restaurant.phone_number %>
</p>


<p><strong>Reviews</strong> <%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> - <%= review.rating %></li>
  <% end %>
</ul>
<br>
